import java.util.Scanner;

public class Ciclos {
    Scanner scanner = new Scanner(System.in);
    public void ciclo1() {
        char respuesta;
        do {
            System.out.print("Ingrese la medida en centímetros: ");
            int medida = scanner.nextInt();
            int kilometros = medida / 100000;
            int metros = (medida % 100000) / 100;
            int centimetros = (medida % 100000) % 100;
            System.out.println(medida + " centímetros son " + kilometros + " kilómetros, " + metros + " metros y " + centimetros + " centímetros.");
            System.out.print("¿Quiere calcular nuevamente para otras medidas? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo2
    () {
        int i = 1;
        while (i <= 10) {
            System.out.print(i + " ");
            i++;
        }
        System.out.println();
    }
    public void ciclo3() {
        int suma = 0;
        int i = 1;
        while (i <= 10) {
            suma += i;
            i++;
        }
        System.out.println("La suma de los números del 1 al 10 es: " + suma);
    }
    public void ciclo4() {
        char respuesta;
        do {
            System.out.print("Ingrese un número: ");
            int numero = scanner.nextInt();
            if (numero % 2 == 0) {
                System.out.println("El número ingresado es par.");
            } else {
                System.out.println("El número ingresado es impar.");
            }
            System.out.print("¿Quiere ingresar otro número? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo5() {
        double suma = 0;
        for (int i = 1; i <= 30; i++) {
            System.out.print("Ingrese el número " + i + ": ");
            suma += scanner.nextDouble();
        }
        double promedio = suma / 30;
        System.out.println("El promedio de los 30 números ingresados es: " + promedio);
    }
    public void ciclo6() {
        int i = 2;
        while (i <= 20) {
            System.out.print(i + " ");
            i += 2;
        }
        System.out.println();
    }
    public void ciclo7() {
        int suma = 0;
        int i = 1;
        while (i <= 400) {
            suma += i;
            i += 2;
        }
        System.out.println("La suma de los números impares del 1 al 400 es: " + suma);
    }
    public void ciclo8() {
        char respuesta;
        do {
            System.out.print("Ingrese el radio del círculo: ");
            double radio = scanner.nextDouble();
            if (radio <= 0) {
                System.out.println("El radio debe ser un número positivo.");
            } else {
                double area = Math.PI * radio * radio;
                System.out.println("El área del círculo es: " + area);
            }
            System.out.print("¿Quiere ejecutar nuevamente el programa? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo9() {
        char respuesta;
        do {
            System.out.print("Ingrese el radio del círculo: ");
            double radio = scanner.nextDouble();
            if (radio <= 0) {
                System.out.println("El radio debe ser un número positivo.");
            } else {
                double perimetro = 2 * Math.PI * radio;
                System.out.println("El perímetro del círculo es: " + perimetro);
            }
            System.out.print("¿Quiere ejecutar nuevamente el programa? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo10() {
        char respuesta;
        do {
            System.out.print("Ingrese la base del rectángulo: ");
            double base = scanner.nextDouble();
            System.out.print("Ingrese la altura del rectángulo: ");
            double altura = scanner.nextDouble();
            if (base <= 0 || altura <= 0) {
                System.out.println("Tanto la base como la altura deben ser números positivos.");
            } else {
                double area = base * altura;
                System.out.println("El área del rectángulo es: " + area);
            }
            System.out.print("¿Quiere calcular nuevamente el área para otras medidas? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo11() {
        char respuesta;
        do {
            System.out.print("Ingrese el radio de la esfera: ");
            double radio = scanner.nextDouble();
            if (radio <= 0) {
                System.out.println("El radio debe ser un número positivo.");
            } else {
                double volumen = (4.0 / 3.0) * Math.PI * Math.pow(radio, 3);
                System.out.println("El volumen de la esfera es: " + volumen);
            }
            System.out.print("¿Quiere calcular nuevamente el volumen para otro radio? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo12() {
        char respuesta;
        do {
            System.out.print("Ingrese la longitud de un lado del cubo: ");
            double lado = scanner.nextDouble();
            if (lado <= 0) {
                System.out.println("La longitud del lado debe ser un número positivo.");
            } else {
                double area = 6 * lado * lado;
                double perimetro = 12 * lado;
                System.out.println("El área del cubo es: " + area);
                System.out.println("El perímetro del cubo es: " + perimetro);
            }
            System.out.print("¿Quiere calcular nuevamente el área y perímetro para otra longitud? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo13() {
        for (int i = 1; i <= 100; i++) {
            if (i % 3 != 0) {
                System.out.print(i + " ");
            }
        }
        System.out.println();
    }
    public void ciclo14() {
        int i = 1;
        while (i <= 100) {
            if (i % 5 != 0) {
                System.out.print(i + " ");
            }
            i++;
        }
        System.out.println();
    }
    public void ciclo15() {
        int i = 1;
        while (i <= 100) {
            if (i % 3 != 0 && i % 5 != 0) {
                System.out.print(i + " ");
            }
            i++;
        }
        System.out.println();
    }
    public void ciclo16() {
        for (int i = 1; i <= 100; i++) {
            if (i % 3 == 0) {
                System.out.print("Cuek ");
            } else {
                System.out.print(i + " ");
            }
        }
        System.out.println();
    }
    public void ciclo17() {
        char respuesta;
        do {
            System.out.print("Ingrese un número para calcular su factorial: ");
            int numero = scanner.nextInt();
            int factorial = 1;
            for (int i = 1; i <= numero; i++) {
                factorial *= i;
            }
            System.out.println("El factorial de " + numero + " es: " + factorial);
            System.out.print("¿Quiere calcular nuevamente el factorial? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo18() {
        char respuesta;
        do {
            System.out.print("Ingrese un número para contar sus dígitos: ");
            int numero = scanner.nextInt();
            int contador = 0;
            while (numero != 0) {
                numero /= 10;
                contador++;
            }
            System.out.println("El número tiene " + contador + " dígitos.");
            System.out.print("¿Quiere calcular nuevamente? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo19() {
        char respuesta;
        do {
            System.out.print("Ingrese el lado del cuadrado: ");
            double lado = scanner.nextDouble();
            if (lado <= 0) {
                System.out.println("El lado del cuadrado debe ser un número positivo.");
            } else {
                double area = lado * lado;
                double perimetro = 4 * lado;
                System.out.println("El área del cuadrado es: " + area);
                System.out.println("El perímetro del cuadrado es: " + perimetro);
            }
            System.out.print("¿Quiere calcular nuevamente para otro lado? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
    public void ciclo20() {
        char respuesta;
        do {
            System.out.print("Ingrese la base: ");
            double base = scanner.nextDouble();
            System.out.print("Ingrese el exponente: ");
            int exponente = scanner.nextInt();
            if (base <= 0 || exponente <= 0) {
                System.out.println("Tanto la base como el exponente deben ser números positivos.");
            } else {
                double resultado = 1;
                for (int i = 0; i < exponente; i++) {
                    resultado *= base;
                }
                System.out.println(base + " elevado a " + exponente + " es: " + resultado);
            }
            System.out.print("¿Quiere calcular nuevamente? (S/N): ");
            respuesta = scanner.next().charAt(0);
        } while (respuesta == 'S' || respuesta == 's');
    }
}
